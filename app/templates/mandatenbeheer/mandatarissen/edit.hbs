<AuToolbar @border="bottom" @size="large" as |Group|>
  <Group>
    <AuHeading @skin="2">Bewerk mandataris<br /><strong
      >{{@model.persoon.gebruikteVoornaam}}
        {{@model.persoon.achternaam}}</strong></AuHeading>
  </Group>
</AuToolbar>
<div class="au-c-body-container au-c-body-container--scroll">

  <Mandatenbeheer::Mandataris::MandatarisView
    class="au-c-body-container"
    @persoon={{@model.persoon}}
    @bestuursorgaan={{@model.bestuursorgaan}}
    @mandatarissen={{@model.mandatarissen}}
    @mandatarisEindeEditForm={{@model.mandatarisEindeEditForm}}
    @mandatarisEditForm={{@model.mandatarisEditForm}}
  />

  <div class="au-o-box">
    {{#if this.createMode}}
      <Form::NewInstance
        @onCreate={{this.onCreate}}
        @form={{@model.mandatarisHiddenPersoonNewForm}}
        @buildMetaTtl={{this.buildMetaTtl}}
        @buildSourceTtl={{this.buildSourceTtl}}
      />
    {{/if}}

    <div class="au-u-padding-top-small">
      <AuButton
        @skin="secondary"
        @width="block"
        {{on "click" this.createMandataris}}
      >
        <AuIcon @icon="add" @alignment="left" />
        Voeg nieuw mandaat toe
      </AuButton>
    </div>
  </div>
</div>

<AuToolbar @border="top" @size="large" as |Group|>
  <Group>
    <AuButton @skin="secondary" {{on "click" this.cancel}}>Annuleer</AuButton>
  </Group>
</AuToolbar>