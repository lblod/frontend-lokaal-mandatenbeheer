{{page-title "Detail"}}
{{breadcrumb this.model.form.label route="eigen-gegevens.form-instances"}}
<AuMainContainer as |main|>
  <main.content>
    <AuToolbar
      @size="large"
      class="au-u-padding-bottom-none au-u-margin-bottom"
      as |Group|
    >
      <Group>
        <AuHeading @skin="2">{{this.model.form.label}}</AuHeading>
      </Group>
      <Group>
        <AuButtonGroup>
          <AuButton @alert={{true}} @skin="secondary">Formulier verwijderen</AuButton>
          <AuButton>Nieuw veld toevoegen</AuButton>
        </AuButtonGroup>
      </Group>
    </AuToolbar>

    <AuDataTable
      @content={{this.model.instances}}
      @noDataMessage="Geen instanties gevonden voor dit formulier"
      as |t|
    >
      <t.content as |c|>
        <c.header>
          <AuDataTableThSortable
            @field="id"
            @currentSorting={{@sort}}
            @label="Instantie"
          />
          <th>Eigenaar</th>
        </c.header>

        <c.body as |instance|>
          <td class="au-u-1-6">{{instance.id}}</td>
          <td class="au-u-3-4">{{instance.owner}}</td>
        </c.body>
      </t.content>
    </AuDataTable>
  </main.content>
</AuMainContainer>