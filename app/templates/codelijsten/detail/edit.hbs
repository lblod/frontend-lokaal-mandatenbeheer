{{page-title "Edit"}}
{{breadcrumb
  this.model.codelijst.label
  route="codelijsten.detail.edit"
  model=this.model.codelijst.id
}}

<AuToolbar @size="large" @border="bottom" class="au-u-margin-bottom" as |Group|>
  <Group>
    <AuHeading @skin="2">Codelijst bewerken</AuHeading>
  </Group>
  <Group>
    <AuButtonGroup>
      <AuButton
        @skin="secondary"
        {{on "click" this.onCancel}}
      >Annuleer</AuButton>
      <Shared::Tooltip
        @showTooltip={{not this.canSave}}
        @alignment="right"
        @tooltipText="De huidige status van de codelijst kan niet worden opgeslagen."
      >
        <AuButton
          @disabled={{not this.canSave}}
          @skin="primary"
          @loading={{this.isSaving}}
          @loadingMessage="Codelijst aan het creÃ«ren"
          {{on "click" this.updateCodelist}}
        >Opslaan</AuButton>
      </Shared::Tooltip>
    </AuButtonGroup>
  </Group>
</AuToolbar>

<div class="au-o-box">
  <div class="au-u-1-3@medium au-u-flex au-u-flex--column">
    <AuLabel>Naam van de codelijst</AuLabel>
    <AuInput
      value={{this.name}}
      @width="block"
      placeholder="Codelijst label"
      {{on "input" this.updateName}}
    />
  </div>
</div>
<div
  class="au-u-flex au-u-flex--end au-u-margin-bottom-small au-u-margin-right"
>
  <AuHelpText @skin="secondary" @size="large">
    Aantal:
    {{this.sortedConcepten.length}}
  </AuHelpText>
</div>
<AuTable @size={{this.size}}>
  <:header>
    <tr>
      <th>{{! Order }}</th>
      <th>Label</th>
      <th>{{! Delete }}</th>
    </tr>
  </:header>
  <:body>
    {{#each this.sortedConcepten as |concept|}}
      <tr>
        <td class="au-u-flex au-u-flex--column">
          <AuButton
            {{on "click" (fn this.moveConcept concept "up")}}
            @icon="chevron-up"
            @skin="naked"
            @hideText={{true}}
          />
          <AuButton
            {{on "click" (fn this.moveConcept concept "down")}}
            @icon="chevron-down"
            @skin="naked"
            @hideText={{true}}
          />
        </td>
        <td class="au-u-4-5">
          {{concept.label}}
        </td>
        <td>
          <AuButton
            @skin="link"
            @alert={{true}}
            {{on "click" (fn this.deleteConcept concept)}}
          >Verwijder</AuButton>
        </td>
      </tr>
    {{/each}}
  </:body>
  <:footer>
    <tr>
      <td colspan="3">
        <AuButton
          @skin="secondary"
          @icon="plus"
          @width="block"
          {{on "click" (fn (mut this.isModalOpen) true)}}
        >
          Voeg een extra optie toe
        </AuButton>
      </td>
    </tr>
  </:footer>
</AuTable>

<Codelijst::AddConceptModal
  @conceptScheme={{this.model.codelijst}}
  @isModalOpen={{this.isModalOpen}}
  @closeModal={{fn (mut this.isModalOpen) false}}
  @onNewConcept={{this.addConcept}}
  @order={{this.concepten.length}}
/>