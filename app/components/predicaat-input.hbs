<div ...attributes>
  <AuLabel @required={{true}}>Predicaat</AuLabel>
  <AuInput
    @width="block"
    @iconAlignment="left"
    value={{@value}}
    {{on "input" this.onUpdate}}
  />
  {{#unless this.isValid}}
    <AuHelpText @error={{true}}>Geef een geldige URI op</AuHelpText>
  {{/unless}}
  {{#if this.isBlockedUri}}
    <AuHelpText @error={{true}}>Deze URI is niet toegestaan</AuHelpText>
  {{/if}}
</div>