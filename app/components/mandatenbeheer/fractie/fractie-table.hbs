<AuDataTable
  @content={{@content}}
  @isLoading={{@isLoading}}
  @noDataMessage="Geen fracties gevonden"
  @sort={{@sort}}
  @page={{@page}}
  @size={{@size}}
  as |t|
>
  <t.content as |c|>
    <c.header>
      <AuDataTableThSortable
        @field="naam"
        @currentSorting={{@sort}}
        @label="Fractienaam"
      />
      <th>Bestuursperiode</th>
      <th></th>
    </c.header>

    <c.body as |row|>
      <td>
        <strong>{{row.naam}}</strong>
      </td>
      <td>
        <Shared::Periode
          @start={{@selectedPeriod.startDate}}
          @end={{@selectedPeriod.endDate}}
        />
      </td>
      <td>
        <LinkTo @route={{@editRoute}} @model={{row.id}} class="au-c-link">
          <AuIcon @icon="pencil" @alignment="left" />
          Bewerk
        </LinkTo>
      </td>
    </c.body>
  </t.content>
</AuDataTable>