<div class="au-o-grid au-o-grid--flush">
  <div class="au-o-grid__item au-u-3-5">
    <p>
      <strong>{{this.rol}}</strong>
    </p>
  </div>
  <div class="au-o-grid__item au-u-2-5 au-u-text-right">
    <AuButton
      @skin={{if this.editing "secondary" "primary"}}
      {{on "click" this.edit}}
    >{{if this.editing "Sluit" "Pas aan"}}</AuButton>
  </div>
  <div class="au-o-grid__item">
    <AuContent>
      <p class="au-c-info-text">
        {{moment-format @mandataris.start "DD-MM-YYYY"}}
        â€”
        {{#if @mandataris.einde}}
          {{moment-format @mandataris.einde "DD-MM-YYYY"}}
        {{else}}
          heden
        {{/if}}
      </p>
      <ul class="au-c-list-horizontal au-u-margin-top-tiny">
        {{#if this.formattedBeleidsdomein}}
          <li class="au-c-list-horizontal__item">{{await
              this.formattedBeleidsdomein
            }}</li>
        {{/if}}

        {{#if this.status}}
          <li class="au-c-list-horizontal__item">{{this.status}}</li>
        {{/if}}
        {{#if @mandataris.rangorde}}
          <li class="au-c-list-horizontal__item">{{@mandataris.rangorde}}</li>
        {{/if}}
        {{#if this.fractie}}
          <li class="au-c-list-horizontal__item">{{this.fractie}}</li>
        {{/if}}
      </ul>
    </AuContent>
  </div>

  {{#if this.editing}}
    <Mandatenbeheer::Mandataris::MandatarisEditPrompt
      class="au-c-collapsible au-u-margin-top-small"
      @mandataris={{@mandataris}}
      @bestuursorgaan={{@bestuursorgaan}}
      @mandatarisEindeEditForm={{@mandatarisEindeEditForm}}
      @mandatarisEditForm={{@mandatarisEditForm}}
    />
  {{/if}}
</div>