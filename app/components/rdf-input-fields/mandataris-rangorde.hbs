{{#if this.shouldRender}}
  <AuLabel
    for={{this.inputId}}
    @error={{this.hasErrors}}
    @warning={{this.hasWarnings}}
    @required={{this.isRequired}}
  >
    {{@field.label}}
  </AuLabel>

  {{#if this.mandaat}}
    <RangordeDropdown
      id={{this.inputId}}
      @selected={{this.rangorde}}
      @placeholder={{this.placeholderText}}
      @mandaatLabel={{this.mandaatLabel}}
      @onNewRangorde={{this.updateValue}}
    />
  {{/if}}

  {{#each this.errors as |error|}}
    <AuHelpText @error={{true}}>{{error.resultMessage}}</AuHelpText>
  {{/each}}

  {{#each this.warnings as |warning|}}
    <AuHelpText @warning={{true}}>{{warning.resultMessage}}</AuHelpText>
  {{/each}}
{{/if}}