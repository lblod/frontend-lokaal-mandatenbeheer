<AuLabel @required={{true}}>Naam van de codelijst</AuLabel>
<AuInput
  value={{@name}}
  @width="block"
  placeholder="Codelijst label"
  {{on "input" this.updateName}}
/>
{{#if this.warningMessage}}
  <AuHelpText @warning={{true}}>{{this.warningMessage}}</AuHelpText>
{{/if}}
{{#if this.errorMessage}}
  <AuHelpText @error={{true}}>{{this.errorMessage}}</AuHelpText>
{{/if}}